generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// --------------------------------------
// NEXT-AUTH MODELS
// --------------------------------------

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --------------------------------------
// APP MODELS (User, Posts, Requests)
// --------------------------------------

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  role          String    @default("CUSTOMER") // "CUSTOMER" or "SHOPKEEPER"

  // Shopkeeper specific fields
  latitude      Float?
  longitude     Float?
  shopName      String?
  address       String?
  phone         String?

  // Relations for NextAuth
  accounts      Account[]
  sessions      Session[]

  // Relations for App Logic
  customerPosts CustomerPost[]
  shopRequests  ShopRequest[]

  // Relations for Chat
  chatsAsCustomer   Conversation[] @relation("CustomerChats")
  chatsAsShopkeeper Conversation[] @relation("ShopkeeperChats")
}

model CustomerPost {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  status      String    @default("OPEN") // "OPEN", "FULFILLED", "CLOSED"
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  customerId  String    @db.ObjectId
  customer    User      @relation(fields: [customerId], references: [id])

  responses     ShopRequest[]
  conversations Conversation[]
}

model ShopRequest {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  customerPostId String       @db.ObjectId
  customerPost   CustomerPost @relation(fields: [customerPostId], references: [id])
  shopkeeperId   String       @db.ObjectId
  shopkeeper     User         @relation(fields: [shopkeeperId], references: [id])
  isAvailable    Boolean      @default(false)
  message        String?
  imageUrls      String[]     @default([])
  createdAt      DateTime     @default(now())
}

// --------------------------------------
// CHAT MODELS
// --------------------------------------

model Conversation {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  
  customerPostId String       @db.ObjectId
  customerPost   CustomerPost @relation(fields: [customerPostId], references: [id])
  
  customerId     String       @db.ObjectId
  customer       User         @relation("CustomerChats", fields: [customerId], references: [id])
  
  shopkeeperId   String       @db.ObjectId
  shopkeeper     User         @relation("ShopkeeperChats", fields: [shopkeeperId], references: [id])
  
  messages       Message[]
  lastMessageAt  DateTime     @default(now())
  createdAt      DateTime     @default(now())

  // Ensures one unique chat per specific post between a specific customer and shopkeeper
  @@unique([customerPostId, shopkeeperId])
}

model Message {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  conversationId String       @db.ObjectId
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  senderId       String       @db.ObjectId
  content        String
  read           Boolean      @default(false)
  createdAt      DateTime     @default(now())
}